<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:onClick="clear"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Undo"
            android:onClick="undo"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/red"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:onClick="R_Pen"
                />
            <TextView
                android:id="@+id/orange"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/orange"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="O_Pen"
                />
            <TextView
                android:id="@+id/yellow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/yellow"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="Y_Pen"
                />
            <TextView
                android:id="@+id/green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/green"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="G_Pen"
                />
            <TextView
                android:id="@+id/blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/blue"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="Blue_Pen"
                />
            <TextView
                android:id="@+id/indigo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/indigo"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="I_Pen"
                />
            <TextView
                android:id="@+id/purple"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/purple"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="P_Pen"
                />
            <TextView
                android:id="@+id/black"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/black"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:onClick="Black_Pen"
                />
        </LinearLayout>

        <tw.com.flag.sw_myveiw.MyVeiw
            android:id="@+id/myView"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="match_parent"
            android:background="#ff0"

            />

    </LinearLayout>


</LinearLayout>